module test19-bitadder;

    reg  [18:0] a;   // 19-bit input a
    reg  [18:0] b;   // 19-bit input b
    reg         cin; // Carry in
    wire [18:0] sum; // 19-bit sum output
    wire        cout; // Carry out

    // Instantiate the adder
    adder_19bit uut (
        .a(a),
        .b(b),
        .cin(cin),
        .sum(sum),
        .cout(cout)
    );

    initial begin
        // monitor changes
        $monitor("Time=%0d : a=%b b=%b cin=%b | sum=%b cout=%b", $time, a, b, cin, sum, cout);

        // Test vectors
        a = 19'b0000000000000000001; b = 19'b0000000000000000001; cin = 0; #10;
        a = 19'b1111111111111111111; b = 19'b0000000000000000001; cin = 0; #10;
        a = 19'b1010101010101010101; b = 19'b0101010101010101010; cin = 0; #10;
        a = 19'b1111111111111111111; b = 19'b1111111111111111111; cin = 1; #10;
        $finish;
    end

endmodule
